/*******************************
         Theme Overrides
*******************************/

.ui.input {
  input {
    border-radius: 0;
    color: @grey;
    font-family: 'Roboto', sans-serif;

    &:focus {
      border-color: @darkGrey;
    }

    &::-webkit-input-placeholder { /* Chrome/Opera/Safari */
      color: @grey;
      font-style: italic;
      font-size: 10px;
    }
    &::-moz-placeholder { /* Firefox 19+ */
      color: @grey;
      font-style: italic;
      font-size: 10px;
    }
    &:-ms-input-placeholder { /* IE 10+ */
      color: @grey;
      font-style: italic;
      font-size: 10px;
    }
    &:-moz-placeholder { /* Firefox 18- */
      color: @grey;
      font-style: italic;
      font-size: 10px;
    }
  }
}

input[type="text"].search::-webkit-input-placeholder {
  font-style: italic;
  font-weight: 300;
}
