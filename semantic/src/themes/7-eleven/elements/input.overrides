/*******************************
         Theme Overrides
*******************************/

.ui.input {
  input {
    border-radius: 0;
    color: @grey;
    font-family: 'Roboto', sans-serif;

    &:focus {
      border-color: @darkGrey;
    }
  }
}

input[type="text"].search::-webkit-input-placeholder {
  font-style: italic;
  font-weight: 300;
}
