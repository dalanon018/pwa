/*******************************
         Theme Overrides
*******************************/

.ui.grid >.column:not(.row) {
  padding: 10px;
}

.ui.grid >.row {
  padding-top: 10px;
  padding-bottom: 10px;
}

.ui.grid > .row > .column {
  padding-left: 10px;
  padding-right: 10px;
}

.ui.grid>.divided.row>.column {
  box-shadow: -1px 0 0 0 @grey;
}

.ui.grid. > .row.bg-light-grey {
  background-color: @lightGrey;
}
