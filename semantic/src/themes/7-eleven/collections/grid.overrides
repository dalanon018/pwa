/*******************************
         Theme Overrides
*******************************/

.ui.grid {
  &.divided {
    &.column {
      box-shadow: -1px 0 0 0 @grey;
    }
  }

  & .row.bg-light-grey {
    background-color: @lightGrey;
  }
}

.ui.grid >.column:not(.row) {
  padding: 10px;
}

.ui.grid >.row {
  padding-top: 10px;
  padding-bottom: 10px;
}

.ui.grid > .row > .column {
  padding-left: 10px;
  padding-right: 10px;
}
